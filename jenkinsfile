pipeline {
    agent any

    parameters {
         string(name: 'tomcat_dev', defaultValue: '52.91.171.169', description: 'Staging Server')
         string(name: 'tomcat_prod', defaultValue: '54.152.164.166', description: 'Production Server')
    }

    triggers {
         pollSCM('* * * * *')
     }

stages{
        stage('Build'){
            steps {
                bat 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }

        stage ('Deployments'){
            parallel{
                stage ('Deploy to Staging'){
                    steps {
                        bat "pscp -i C:/Softwares/tomcat-demo.pem C:/Program Files (x86)/Jenkins/workspace/Fully Automated with AWS/webapp/target/*.war ec2-user@${params.tomcat_dev}:/var/lib/tomcat8/webapps"
                    }
                }

                stage ("Deploy to Production"){
                    steps {
                        bat "pscp -i C:/Softwares/tomcat-demo.pem C:/Program Files (x86)/Jenkins/workspace/Fully Automated with AWS/webapp/target/*.war ec2-user@${params.tomcat_prod}:/var/lib/tomcat8/webapps"
                    }
                }
            }
        }
    }
}